{
  "name": "coffee-platform-rbac",
  "version": "1.0.0",
  "description": "Role-Based Access Control framework for Coffee Platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "dev:frontend": "vite",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "start": "bun run src/server.ts",
    "build": "bun run build:frontend",
    "build:server": "bun build src/index.ts --outdir dist --target bun",
    "db:setup": "bun run scripts/setup-database.ts",
    "db:migrate": "bun run src/db/migrations.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "bunx biome check .",
    "typecheck": "bunx tsc --noEmit",
    "remotion:preview": "npx remotion studio --config=remotion/remotion.config.ts",
    "remotion:render": "npx remotion render --config=remotion/remotion.config.ts NinjaIntro out/ninja-intro.mp4"
  },
  "keywords": [
    "rbac",
    "access-control",
    "permissions",
    "coffee-platform"
  ],
  "author": "CertilinkAdmin <cole@certilink.tech>",
  "license": "MIT",
  "dependencies": {
    "@remotion/zod-types": "^4.0.417",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.16.0",
    "ajv": "^8.12.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.294.0",
    "pg": "^8.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^2.0.0",
    "xml2js": "^0.6.2",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@remotion/bundler": "^4.0.417",
    "@remotion/cli": "^4.0.417",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.1.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/react-router-dom": "^5.3.3",
    "@types/xml2js": "^0.4.14",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.32",
    "remotion": "^4.0.417",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
